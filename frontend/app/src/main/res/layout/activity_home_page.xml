<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".Pages.Home_Page">

    <Button
        android:id="@+id/bt_Favorites"
        android:layout_width="360dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"

        android:drawableStart="@drawable/star"
        android:paddingLeft="10dp"
        android:paddingRight="3dp"
        android:drawableTint="@color/black"
        android:fontFamily="@font/comforta"
        android:text="Favorites"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_MyRecipes" />

    <Button
        android:id="@+id/bt_Settings"
        android:layout_width="360dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:drawableStart="@drawable/settings"
        android:paddingLeft="10dp"
        android:paddingRight="3dp"
        android:drawableTint="@color/black"
        android:fontFamily="@font/comforta"
        android:text="Settings"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_Favorites" />

    <ImageView
        android:id="@+id/DonutCircle"
        android:layout_width="383dp"
        android:layout_height="291dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/bt_FindRecipes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/main_logo" />

    <Button
        android:id="@+id/bt_FindRecipes"
        android:layout_width="360dp"
        android:layout_height="90dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/button"
        android:drawableStart="@drawable/general_search_icon"

        android:drawableTint="@color/black"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:fontFamily="@font/opensans"
        android:text="Find Recipes"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DonutCircle" />

    <Button
        android:id="@+id/bt_MyRecipes"
        android:layout_width="360dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:drawableStart="@drawable/recipes"
        android:drawableTint="@color/black"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:fontFamily="@font/opensans"
        android:text="My Recipes"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_FindRecipes" />

</androidx.constraintlayout.widget.ConstraintLayout>